<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controller.ListShifts">

    <TextView
        android:id="@+id/txtWeekCommencing"
        android:layout_width="125dp"
        android:layout_height="18dp"
        android:layout_marginStart="8dp"
        android:text="Week Commencing"
        android:textAlignment="textStart"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listShiftsView" />

    <TextView
        android:id="@+id/txtTotalHours"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="Hours"
        android:textAlignment="textEnd"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="@+id/h2"
        app:layout_constraintTop_toTopOf="@+id/txtTotalBreaks" />

    <TextView
        android:id="@+id/txtTotalBreaks"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="Break"
        android:textAlignment="textEnd"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="@+id/h1"
        app:layout_constraintTop_toBottomOf="@+id/listShiftsView" />

    <TextView
        android:id="@+id/txtTotalPay"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="Pay"
        android:textAlignment="textEnd"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="@+id/h4"
        app:layout_constraintTop_toTopOf="@+id/txtTotalHours" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listShiftsView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/btnListLeft"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shiftListHeader" />

    <TextView
        android:id="@+id/shiftListHeader"
        android:layout_width="173dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Shift List"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/h4"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Pay"
        android:textAlignment="textEnd"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/h3" />

    <TextView
        android:id="@+id/h3"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Rate"
        android:textAlignment="textEnd"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toStartOf="@+id/h4"
        app:layout_constraintTop_toTopOf="@+id/h2" />

    <TextView
        android:id="@+id/h2"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Hours"
        android:textAlignment="textEnd"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toStartOf="@+id/h3"
        app:layout_constraintTop_toTopOf="@+id/h1" />

    <TextView
        android:id="@+id/h1"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:text="Break"
        android:textAlignment="textEnd"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toStartOf="@+id/h2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnListRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/ic_media_ff" />

    <ImageButton
        android:id="@+id/btnListLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/ic_media_rew" />

</androidx.constraintlayout.widget.ConstraintLayout>